
<table class="table table-dark table-hover table-sm">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Desisiones</th>
        </tr>
    </thead>
    <tbody>
        @foreach ( var obj in Model)
        {
            <tr>
                <td>@obj.Id</td>
                <td>@obj.Nombre</td>
                <td>
                    <a class="btn btn-outline-primary btn-sm" asp-route-Id="@obj.Id" asp-controller="Curso" asp-action="Index">Detalle</a>
                    <a class="btn btn-outline-success btn-sm" asp-route-Id="@obj.Id" asp-controller="Curso" asp-action="Edit">Editar</a>
                    <a class="btn btn-outline-danger btn-sm" asp-route-Id="@obj.Id" asp-controller="Curso" asp-action="Delete">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
